<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>Wikipedia Ontology Search System</display-name>

	<!--
			  There are three means to configure Wickets configuration mode and they are
			  tested in the order given.
			  1) A system property: -Dwicket.configuration
			  2) servlet specific <init-param>
			  3) context specific <context-param>
			  The value might be either "development" (reloading when templates change)
			  or "deployment". If no configuration is found, "development" is the default.
		-->

	<filter>
		<filter-name>wicket.wikipedia_ontology_search</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>jp.ac.keio.ae.comp.yamaguti.wikipedia_ontology_search.WikipediaOntologySearchApplication</param-value>
		</init-param>
		<init-param>
			<param-name>configuration</param-name>
			<param-value>development</param-value>
			<!--
				<param-value>deployment</param-value>
							-->
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>wicket.wikipedia_ontology_search</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<context-param>
		<param-name>wikipedia_ontology_path</param-name>
		<param-value>C:/wikipedia_ontology/</param-value>
	</context-param>

	<context-param>
		<param-name>h2_db_path</param-name>
		<param-value>~/h2db/</param-value>
	</context-param>

	<context-param>
		<param-name>h2_db_protocol</param-name>
		<param-value>tcp://localhost/</param-value>
		<!--
			<param-value>file:</param-value>
			-->
	</context-param>

</web-app>
